{
	"compilerOptions": {
        "declaration": true,
        "sourceMap": true,
        "declarationDir": "types/",
        "outDir": "lib/",
        "target": "es2015",
        "module": "es2015",
		"plugins": [
			{
				"transform": "@zoltu/typescript-transformer-append-js-extension/output/index.js",
				"after": true
			}
        ],
        "lib": ["es2015", "es2016", "es2017", "es2018"],

        // Enhance Strictness
        "strict": true,
        "noUnusedLocals": true,
        "suppressImplicitAnyIndexErrors": true,
        "noImplicitReturns": true,
    },
    "include": ["src/"],
    "exclude": [
        "**/__tests__"
    ]
}